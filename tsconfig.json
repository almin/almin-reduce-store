{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./lib/",
    "sourceMap": true,
    "declaration": true,
    "lib": [
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "pretty": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    ".git",
    "node_modules"
  ]
}
